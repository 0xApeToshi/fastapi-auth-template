# Application
PROJECT_NAME=User Management API

# API Configuration
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=fastapi_auth

# Rate Limiting (requests per time period per IP)
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_REFRESH=10/minute
RATE_LIMIT_LOGOUT=20/minute
RATE_LIMIT_REGISTER=3/minute
RATE_LIMIT_LIST_USERS=30/minute
RATE_LIMIT_PASSWORD_RESET=3/minute

# Testing (set to true to disable rate limiting in tests)
TESTING=false

# Optional: Argon2 Settings
# ARGON2_TIME_COST=2
# ARGON2_MEMORY_COST=102400
# ARGON2_PARALLELISM=8
# ARGON2_HASH_LENGTH=16
# ARGON2_SALT_LENGTH=16